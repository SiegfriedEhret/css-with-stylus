mq(size, content)
  if $size == small
    @media (max-width: 48em) &
      content
  if $size == medium
    @media (max-width: 58em) &
      content
  if $size == large
    @media (min-width: 68em) &
      content

.page-wrap
  width 75%
  mq(large, width 60%)
  mq(medium, width 80%)
  mq(small, width 95%)